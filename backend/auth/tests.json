{
  "tests": [
    {
      "name": "Login with auto-registration",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "login",
        "email": "testuser_TIMESTAMP@example.com",
        "password": "password123"
      },
      "expectedStatus": 201,
      "expectedBody": {
        "token": "string",
        "user": {
          "id": "number",
          "email": "string",
          "full_name": "string"
        },
        "is_new_user": true
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Reset password for existing user",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "reset_password",
        "email": "newuser@example.com",
        "new_password": "newpassword456"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "token": "string",
        "user": {
          "email": "string"
        },
        "message": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}