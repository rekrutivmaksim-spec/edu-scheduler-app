{
  "tests": [
    {
      "name": "Login with auto-registration",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "login",
        "email": "testuser_TIMESTAMP@example.com",
        "password": "password123"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "token": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Reset password for existing user",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "reset_password",
        "email": "newuser@example.com",
        "new_password": "newpassword456"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "token": "string",
        "user": {
          "email": "string"
        },
        "message": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Delete account - missing token",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "delete_account",
        "password": "somepassword"
      },
      "expectedStatus": 401,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}